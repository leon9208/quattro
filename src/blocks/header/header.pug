header.header
	.header-side.header-side--left
		if pageType == 'game'
			a.btn.btn--xs.btn--square.btn--light(href="/") 
				+xlink('arrow-left', 'btn')
			.header-info
				.header-info__title Gates Of Olympus
				.header-info__text Pragmatic

	.header-center
		if pageType != 'main'
			+logo('logo--header', 'quattro', 'casino')
		else
			+logo('logo--header', 'quattro', 'casino & sportsbook')
	.header-side.header-side--right
		if pageType == 'main'
			a.btn.btn--xs.btn--light(href="#")
				+xlink('user', 'btn')
				span Log In
			a.btn.btn--xs.btn--primary(href="#")
				span Register
		else
