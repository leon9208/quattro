mixin cNav(cIcon, cValue, cTitle, cChecked = false, cClass = false)
	label.category-nav.swiper-slide(class=cClass)
		input.category-nav__input(type="radio", name="game-filter" value=cValue checked=cChecked)
		.category-nav__item
			+xlink(cIcon, 'category-nav')
			span.category-nav__title=cTitle
.category
	.container
		.category-head
			.category-filter
				.category-filter__top
					a.category-btn(href="#modal-search" data-modal-target)
						+xlink('search', 'category-btn')
						span search
					a.category-provider(href="#modal-providers" data-modal-target) 
						img.category-provider__icon(src="img/providers.svg", alt="")
						.category-provider__name Providers
				.swiper.category-nav__list
					.swiper-wrapper
						+cNav('casino', 'all', 'All games', true)
						+cNav('fire', 'top', 'Top')
						+cNav('novelty', 'new', 'New')
						+cNav('bonus', 'bonus', 'Bonus buy')
						+cNav('live', 'live', 'Live games', false, 'category-nav--live')
						+cNav('instant', 'instant', 'Instant games')
						a.category-nav.swiper-slide(href="#") 
							img(src="img/aviator.svg", alt="")
						a.category-nav.swiper-slide(href="#") 
							img(src="img/crazytime.jpg", alt="")
						+cNav('roulette', 'roulette', 'Roulette')
						+cNav('blackjack', 'blackjack', 'Blackjack')
						+cNav('g-shows', 'shows', 'Game shows')
						+cNav('poker', 'poker', 'Poker')
						+cNav('heart', 'favourites', 'Favourites')
						+cNav('star', 'popular', 'Popular')
						+cNav('dice', 'baccarat-dice', 'Baccarat & Dice')
		.category-body
			h2.category-body__title(data-count="659")
				if catTitle
					span=catTitle
					.loader
						span
						span
						span
					span(data-category-title) All games
				else
					span(data-category-title) All games
			.category-grid
				if catTitle
					+game(false, 'top', true, true)
					- for (let x = 0; x < 1; x++)
						+game(false, 'top', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'new', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'bonus', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'live', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'instant', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'roulette', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'blackjack', true)
					- for (let x = 0; x < 2; x++)
						+game(false, 'shows', true)
					- for (let x = 0; x < 1; x++)
						+game(false, 'poker', true)
				else
					+game(false, 'top', false, true)
					- for (let x = 0; x < 1; x++)
						+game(false, 'top')
					- for (let x = 0; x < 2; x++)
						+game(false, 'new')
					- for (let x = 0; x < 2; x++)
						+game(false, 'bonus')
					- for (let x = 0; x < 2; x++)
						+game(false, 'live')
					- for (let x = 0; x < 2; x++)
						+game(false, 'instant')
					- for (let x = 0; x < 2; x++)
						+game(false, 'roulette')
					- for (let x = 0; x < 2; x++)
						+game(false, 'blackjack')
					- for (let x = 0; x < 2; x++)
						+game(false, 'shows')
					- for (let x = 0; x < 1; x++)
						+game(false, 'poker')
		.category-footer
			if catTitle
				button.category__btn.btn.btn--base.btn--center(type="button") Load more
			else
				a.category__btn.btn.btn--base.btn--center(href="#") go to ALL GAMES
