include mixin.pug
block vars
	- var title = 'Title';
	- var description = 'Description';
	- var navTheme = 'undefined' ? 'transparent' : navTheme
	- var pageType = ''
- var company = 'Company name';
- var phone = '+7 499 112-48-29';
- var phoneLink = 'tel:'+phone.replace(/[-/ /]/g,'');
- var email = 'info@sweetit.ru';
- var emailLink = 'mailto:'+email+'';
doctype html
html(lang='en')
	include head
	body(class=pageType)
		._overlay
		.fix-right
			.inform
				a.inform-btn(href="#" data-count="3")
					+xlink('cup', 'inform-btn')
					span Tourneys
				a.inform-btn.inform-btn--chat.inform-btn--primary(href="#")
					+xlink('chat', 'inform-btn')
					span players chat
			.inform.inform--bd
				a.inform-btn(href="#" )
					.live-icon.live-icon--primary
					b 239
					span players online
				a.inform-btn(href="#" )
					.live-icon.live-icon--secondary
					span live support
					img(src="img/chat.svg", alt="", srcset="")
				a.inform-btn(href="#modal-search" data-modal-target)
					+xlink('search', 'inform-btn')
					span search games
		.page
			//mobilenav
			include ../blocks/mobilenav/mobilenav.pug
			//End mobilenav
			//nav
			include ../blocks/nav/nav.pug
			//End nav
			//header
			include ../blocks/header/header.pug
			//End header
			main.main
				block content
			//footer
			include ../blocks/footer/footer.pug
			//End footer
		include ../blocks/modal/modal.pug
		include scripts