

mixin lazyJpg(image, altTag, lWidth, lHeight)
	picture
		source(data-srcset="img/"+image+".webp" type="image/webp")
		source(data-srcset="img/"+image+".jpg" type="image/jpeg")
		img.lazyload.blur-up(src="data:image/gif;base64,R0lGODdhAQABAPAAAMPDwwAAACwAAAAAAQABAAACAkQBADs=" data-src="img/"+image+".jpg" alt=altTag width=lWidth height=lHeight)

mixin picJpg(image, altTag)
	picture
		source(srcset="img/"+image+".webp" type="image/webp")
		source(srcset="img/"+image+".jpg" type="image/jpeg")
		img(src="img/"+image+".jpg" alt=altTag)

mixin picPng(image, altTag)
	picture
		source(srcset="img/"+image+".webp" type="image/webp")
		source(srcset="img/"+image+".png" type="image/png")
		img(src="img/"+image+".png" alt=altTag)

mixin picMediaPng(image, altTag)
	picture
		source(srcset="img/"+image+"-small.webp" type="image/webp" media="(max-width: 560px)")
		source(srcset="img/"+image+"-medium.webp" type="image/webp" media="(max-width: 780px)")
		source(srcset="img/"+image+"-large.webp" type="image/webp" media="(min-width: 780px)")
		source(srcset="img/"+image+"-small.png" type="image/png" media="(max-width: 560px)")
		source(srcset="img/"+image+"-medium.png" type="image/png" media="(max-width: 780px)")
		source(srcset="img/"+image+"-large.png" type="image/png" media="(min-width: 780px)")
		img(src="img/"+image+".png" alt=altTag)

