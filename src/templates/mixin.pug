mixin lazyJpg(image, altTag, lWidth, lHeight)
	picture
		source(data-srcset="img/"+image+".webp" type="image/webp")
		source(data-srcset="img/"+image+".jpg" type="image/jpeg")
		img.lazyload.blur-up(src="data:image/gif;base64,R0lGODdhAQABAPAAAMPDwwAAACwAAAAAAQABAAACAkQBADs=" data-src="img/"+image+".jpg" alt=altTag width=lWidth height=lHeight)

mixin picJpg(image, altTag)
	picture
		source(srcset="img/"+image+".webp" type="image/webp")
		source(srcset="img/"+image+".jpg" type="image/jpeg")
		img(src="img/"+image+".jpg" alt=altTag)

