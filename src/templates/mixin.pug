mixin slider(sTitle, sBreakpoints, sVert = false)
	.section
		.container
			.section-head
				h2.section-title=sTitle
				a.section-head__link(href="#") All #{sTitle}
				.swiper-nav
					button.swiper-button.swiper-button--prev
						+xlink('arrow-left', 'btn')
					button.swiper-button.swiper-button--next
						+xlink('arrow-right', 'btn')
			.swiper(data-breakpoint=''+sBreakpoints+'')
				.swiper-wrapper
					- for (let x = 0; x < 10; x++)
						.swiper-slide
							+game(sVert)


